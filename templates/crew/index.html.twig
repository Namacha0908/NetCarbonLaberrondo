{% extends 'base.html.twig' %}

{% block title %}Hello CrewController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>
	{# <head>
		<meta name="referrer" content="no-referrer">
	</head> #}


	<div class="album py-5 bg-light">
		<div class="container">
			<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
				{% for crewmember in data %}

					<div class="col">
						<div class="card shadow-sm">

							<div class="card-body">
								<img class="d-block mx-auto mb-4" src="{{ crewmember.image }}" alt="" width="250" height="250">


								<h5 class="card-title">{{ crewmember.name }}</h5>


								<h6 class="card-subtitle mb-2 text-muted">Agency :
									{{ crewmember.agency }}</h6>

								<div class="d-flex justify-content-between align-items-center">
									<div class="btn-group">
										<a href="{{ path('app_crew_member', {'id': crewmember.id }) }}" class="btn btn-secondary" role="button" aria-pressed="true">View more ...</a>
									</div>
									{% if crewmember.status == "active" %}
										<div class="">Activity :
											<i class="fa-solid fa-user-astronaut text-success"></i>

										</div>

									{% else %}
										<div class="">Activity :
											<i class="fa-solid fa-user-astronaut text-danger"></i>


										</div>

									{% endif %}
								</div>


							</div>
						</div>
					</div>

				{% endfor %}

			</div>
		</div>
	</div>
{% endblock %}
