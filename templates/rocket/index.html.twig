{% extends 'base.html.twig' %}

{% block title %}Hello RocketController!
{% endblock %}

{% block body %}
	<style>
		
	</style>

	<div>
		<div class="px-4 py-5 my-5 text-center">

			<img class="d-block mx-auto mb-4" src="{{ data.flickr_images[0] }}" alt="" width="250" height="250">

			<h3 class="display-5 fw-bold">{{ data.name }}
			</h3>
			<p>{{ data.height.meters }} meters for {{data.mass.kg}} kilos</p>
		<p>{{ data.description }}</p>

			<div
				class="row pt-5">


				<!-- Earnings (Monthly) Card Example -->
				<div class="col-xl-3 col-md-6 mb-4">
					<div class="card border-left-primary shadow h-100 py-2">
						<div class="card-body">
							<div class="row no-gutters align-items-center">
								<div class="col mr-2">
									<div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
										Company : </div>
									<div class="h5 mb-0 font-weight-bold text-gray-800">{{data.company}}</div>
								</div>
								<div class="col-auto">
									<i class="fa-solid fa-building-columns fa-2x text-gray-300"></i>


								</div>
							</div>
						</div>
					</div>
				</div>

				<!-- Earnings (Monthly) Card Example -->
				<div class="col-xl-3 col-md-6 mb-4">
					<div class="card border-left-success shadow h-100 py-2">
						<div class="card-body">
							<div class="row no-gutters align-items-center">
								<div class="col mr-2">
									<div class="text-xs font-weight-bold text-success text-uppercase mb-1">
										cost_per_launch</div>

									<div class="h5 mb-0 font-weight-bold text-gray-800">
										{{data.cost_per_launch}} $
									</div>
								</div>
								<div class="col-auto">
									<i class="fa-solid fa-shuttle-space fa-2x text-gray-300"></i>


								</div>
							</div>
						</div>
					</div>
				</div>

				<div class="col-xl-3 col-md-6 mb-4">
					<div class="card border-left-success shadow h-100 py-2">
						<div class="card-body">
							<div class="row no-gutters align-items-center">
								<div class="col mr-2">
									<div class="text-xs font-weight-bold text-success text-uppercase mb-1">
										Know more ?!</div>

									<div class="h5 mb-0 font-weight-bold text-gray-800">
										<a href="{{ data.wikipedia }}" class="btn btn-secondary" role="button" aria-pressed="true">Visit Wikipedia ...</a>


									</div>
								</div>
								<div class="col-auto">
									<i class="fa-solid fa-book-open fa-2x text-gray-300"></i>

								</div>
							</div>
						</div>
					</div>
				</div>

				<div class="col-xl-3 col-md-6 mb-4">
					<div class="card border-left-info shadow h-100 py-2">
						<div class="card-body">
							<div class="row no-gutters align-items-center">
								<div class="col mr-2">
									<div class="text-xs font-weight-bold text-info text-uppercase mb-1">Success rate 
									</div>


									<div class="row no-gutters align-items-center">
										<div class="col-auto">
											<div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">{{data.success_rate_pct}} %</div>

										</div>
										<div class="col">
											<div class="progress progress-sm mr-2">
												<div class="progress-bar bg-info" role="progressbar" style="width: {{data.success_rate_pct}}%" aria-valuenow="{{data.success_rate_pct}}" aria-valuemin="0" aria-valuemax="100"></div>

											</div>
										</div>
									</div>
								</div>
								<div class="col-auto">
									<i class="fa-solid fa-recycle fa-2x text-gray-300"></i>

								</div>
							</div>
						</div>
					</div>
				</div>


				<!-- Pending Requests Card Example -->
				<div class="col-xl-3 col-md-6 mb-4">
					<div class="card border-left-warning shadow h-100 py-2">
						<div class="card-body">
							<div class="row no-gutters align-items-center">
								<div class="col mr-2">
									<div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
										Status</div>
									{% if data.active %}
										<div class="h5 mb-0 font-weight-bold text-gray-800">

											<i class="fa-solid fa-user-astronaut text-success"></i>


										</div>
									{% else %}

										<div class="h5 mb-0 font-weight-bold text-gray-800">
											<i class="fa-solid fa-user-astronaut text-danger"></i>


										</div>

									{% endif %}
								</div>
								<div class="col-auto">
									<i class="fa-solid fa-atom fa-2x text-gray-300"></i>


								</div>
							</div>
						</div>
					</div>
				</div>

			</div>
			

		</div>
	</div>
{% endblock %}
